<Window x:Class="FTP_Client.FilenameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FilenameDialog" Height="107" Width="297" WindowStyle="ToolWindow">
    <Grid>
        <TextBox x:Name="textbox_filename" HorizontalAlignment="Left" Height="23" Margin="80,26,0,0" TextWrapping="Wrap" Text="newfold" VerticalAlignment="Top" Width="120"/>
        <Label Content="foldname:" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_ok" Content="Ok" HorizontalAlignment="Left" Margin="214,27,0,0" VerticalAlignment="Top" Width="56" Click="btn_ok_Click"/>

    </Grid>
</Window>
